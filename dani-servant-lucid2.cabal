tested-with: GHC==9.8.1 GHC==9.2.8

common basic
    ghc-options: -Wall
    default-language: GHC2021
    build-depends:    
        base >=4.9 && <5

library
    import: basic
    exposed-modules:  
        MyLib
    reexported-modules: 
        Servant.API.ContentTypes.Lucid
    -- other-modules:
    -- other-extensions:
    hs-source-dirs:   lib
    build-depends:    
        dani-servant-lucid2:api

library api
    import: basic
    exposed-modules:  
        Servant.API.ContentTypes.Lucid
    hs-source-dirs: lib-api
    visibility: public